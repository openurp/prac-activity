<beangle xmlns="http://beangle.github.io/schema/framework"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://beangle.github.io/schema/framework http://beangle.github.io/schema/framework-1.0.xsd">

  <ems app-name="prac-activity-webapp"/>
  <cdi>
    <module class="org.openurp.prac.activity.web.action.DefaultModule"/>
    <module class="org.openurp.edu.program.service.DefaultModule"/>
    <module class="org.openurp.edu.grade.service.ConfigModule"/>
    <module class="org.openurp.starter.web.ProjectModule"/>
  </cdi>

  <mvc>
    <static>
      <bundle name="kalendae" version="1.0.2">
        <module name="kalendae" js="js/kalendae.standalone.js" css="css/kalendae.css"/>
      </bundle>
    </static>

    <profile package="org.openurp.prac.activity.web.action">
      <url path="/" suffix="" style="seo"/>
      <interceptor name="web.Interceptor.hibernate"/>
      <interceptor name="web.Interceptor.security"/>
    </profile>
  </mvc>

</beangle>
